<% 

    groupSelectHelper = (name, items, optionSelect = '') => {
        let xhtml  = '';
        items.forEach(item => {
            let selected = (item.id == optionSelect) ? 'selected="selected"' : '';
            let id = (item.id == undefined ) ? 'allvalue': item.id
            xhtml  +=   ` <option value="${id}" ${selected}>${item.name}</option>` ;
        }); 
        return `<select id="group" name="${name}" class="custom-select custom-select-sm">${xhtml}</select>`;
    }
%>



